# APIs Externas - Obrigatórias
# Replicate API Configuration
REPLICATE_API_TOKEN=r8_your-replicate-api-token-here
REPLICATE_WEBHOOK_SECRET=whsec_your-webhook-signing-secret-here
REPLICATE_WEBHOOK_URL=https://your-domain.com/api/webhooks/replicate

# Transcription Webhook Configuration
REACT_APP_TRANSCRIPTION_WEBHOOK_URL=https://your-webhook-url.com/api/process
REACT_APP_TRANSCRIPTION_WEBHOOK_SECRET=your-webhook-secret-key-here
REACT_APP_TRANSCRIPTION_WEBHOOK_TIMEOUT=60000

# Social Downloader webhook (for video/audio downloads)
REACT_APP_SOCIAL_WEBHOOK_URL=https://your-social-webhook.com/api/download
REACT_APP_SOCIAL_WEBHOOK_SECRET=your_social_webhook_secret_key
REACT_APP_SOCIAL_WEBHOOK_TIMEOUT=60000

# Transcription Service Configuration
REACT_APP_TRANSCRIPTION_SERVICE=replicate
REACT_APP_WHISPER_MODEL=openai/whisper-large-v3
REACT_APP_MAX_AUDIO_DURATION=7200

# Configurações da Aplicação
REACT_APP_APP_NAME=Transkipta
REACT_APP_APP_VERSION=2.0.0
REACT_APP_MAX_FILE_SIZE=100
REACT_APP_SUPPORTED_FORMATS=mp4,mp3,wav,m4a,webm

# Autenticação Local
REACT_APP_JWT_SECRET=your-very-secure-jwt-secret-key-here
REACT_APP_SESSION_TIMEOUT=3600

# Credenciais do Administrador - OBRIGATÓRIO CONFIGURAR!
REACT_APP_ADMIN_USERNAME=your-admin-username-here
REACT_APP_ADMIN_EMAIL=your-admin-email-here
REACT_APP_ADMIN_PASSWORD=your-secure-admin-password-here

# Configurações de Ambiente
REACT_APP_ENVIRONMENT=development
REACT_APP_API_TIMEOUT=30000
REACT_APP_DEBUG=true

# URLs de API (para diferentes ambientes)
# RAPIDAPI_BASE_URL removido - não será mais usado

# Configurações de Upload
REACT_APP_MAX_UPLOAD_SIZE=104857600
REACT_APP_CHUNK_SIZE=1048576

# Configurações de Cache
REACT_APP_CACHE_DURATION=86400
REACT_APP_ENABLE_CACHE=true

# Configurações de UI
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_DEFAULT_LANGUAGE=pt-BR

# Configurações de Analytics (opcional)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=

# Configurações de Logs
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGS=true